@page "/signalrtest"
@using Microsoft.AspNetCore.SignalR.Client

<h3>SignalR Local Test</h3>

<input @bind="userInput" placeholder="Name" />
<input @bind="messageInput" placeholder="Message" />
<button @onclick="SendMessage">Send</button>

<ul>
    @foreach (var m in messages)
    {
        <li><b>@m.User</b>: @m.Text</li>
    }
</ul>

@code {
    private HubConnection? hubConnection;
    private string userInput = "ObserverTest";
    private string messageInput = "";
    private List<(string User, string Text)> messages = new();

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/observerhub"))
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            messages.Add((user, message));
            InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
    }

    private async Task SendMessage()
    {
        if (hubConnection != null)
        {
            await hubConnection.InvokeAsync("SendMessage", userInput, messageInput);
            messageInput = "";
        }
    }
}